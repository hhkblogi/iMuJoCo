// App build configuration

// Include MuJoCo framework settings
#include "../../third_party/MuJoCoFramework.xcconfig"

// Path to MJCPhysicsRuntime module (in core/core/)
MJCPHYSICS_MODULE_PATH = $(PROJECT_DIR)/../core/core

// Swift module import paths - MJCPhysicsRuntime module (platform-specific)
SWIFT_INCLUDE_PATHS[sdk=macosx*] = $(inherited) $(MJCPHYSICS_MODULE_PATH)
SWIFT_INCLUDE_PATHS[sdk=iphoneos*] = $(inherited) $(MJCPHYSICS_MODULE_PATH)
SWIFT_INCLUDE_PATHS[sdk=iphonesimulator*] = $(inherited) $(MJCPHYSICS_MODULE_PATH)
SWIFT_INCLUDE_PATHS[sdk=appletvos*] = $(inherited) $(MJCPHYSICS_MODULE_PATH)
SWIFT_INCLUDE_PATHS[sdk=appletvsimulator*] = $(inherited) $(MJCPHYSICS_MODULE_PATH)

// Enable Clang modules for C/C++ headers
CLANG_ENABLE_MODULES = YES

// Link against Metal frameworks (needed for render views)
OTHER_LDFLAGS = $(inherited) -framework Metal -framework MetalKit
