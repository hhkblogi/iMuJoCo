// control.fbs
// Control packet: driver â†’ iMuJoCo
// Sends actuator control values to the simulation

namespace imujoco.schema;

table ControlPacket {
  // Packet sequence number (for ordering/debugging)
  sequence: uint32;

  // Control values for actuators (length = model.nu)
  ctrl: [double];

  // Sender's monotonic clock timestamp in microseconds since epoch.
  // Used for paced replay on the receiver side.
  // 0 (default) = apply immediately (legacy / backward-compatible behavior).
  host_timestamp_us: uint64;
}

root_type ControlPacket;
file_identifier "CTPK";
