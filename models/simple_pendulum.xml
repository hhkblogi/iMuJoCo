<mujoco model="simple pendulum">
  <option timestep="0.002"/>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1"/>
    <geom type="plane" size="1 1 0.1" rgba="0.5 0.5 0.5 1"/>

    <body name="pendulum" pos="0 0 1">
      <joint name="hinge" type="hinge" axis="0 1 0" damping="0.1"/>
      <geom type="capsule" fromto="0 0 0 0 0 -0.5" size="0.05" rgba="0.8 0.6 0.4 1"/>
      <body name="ball" pos="0 0 -0.5">
        <geom type="sphere" size="0.1" rgba="0.75 0.15 0.15 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="hinge" joint="hinge" gear="1"/>
  </actuator>

  <keyframe>
    <key name="start" qpos="1.0"/>  <!-- Start at 1.0 rad (~57.3 degrees) -->
  </keyframe>
</mujoco>
